    echo -e "\n${ORANGE}# Downloading Utilities:${RESET}"
    echo -e "${YELLOW}getyt${RESET} ${BLUE}- Download audio from a YouTube video and save it as MP3. ${BLUE}Usage:${RESET} getyt <video_url> (YouTube, Audio)"
    echo -e "${YELLOW}getytmp4${RESET} ${BLUE}- Download a YouTube video in MP4 format (1080p). ${BLUE}Usage:${RESET} getytmp4 <video_url> (YouTube, Video)"
    echo -e "${YELLOW}getytplist${RESET} ${BLUE}- Download audio from all videos in a YouTube playlist. ${BLUE}Usage:${RESET} getytplist <playlist_url> (YouTube, Audio)"
    echo -e "${YELLOW}getytplistmp4${RESET} ${BLUE}- Download all videos in a YouTube playlist in MP4 format. ${BLUE}Usage:${RESET} getytplistmp4 <playlist_url> (YouTube, Video)"
    echo -e "${YELLOW}getytplistmp4subs${RESET} ${BLUE}- Download all videos in a YouTube playlist in MP4 format with subtitles. ${BLUE}Usage:${RESET} getytplistmp4subs <playlist_url> (YouTube, Video)"
    echo -e "${YELLOW}getytmp4subs${RESET} ${BLUE}- Download a YouTube video in MP4 format (1080p) with subtitles. ${BLUE}Usage:${RESET} getytmp4subs <video_url> (YouTube, Video)"
    echo -e "${YELLOW}getspot${RESET} ${BLUE}- Download a song from Spotify. ${BLUE}Usage:${RESET} getspot <song_url> (Spotify, Audio)"
    echo -e "${YELLOW}getalb${RESET} ${BLUE}- Download an album from Spotify. ${BLUE}Usage:${RESET} getalb <album_url>(Spotify, Audio)"

    echo -e "\n${ORANGE}# Miscellaneous:${RESET}"
    echo -e "${YELLOW}code${RESET} ${BLUE}- Launch Visual Studio Code from the command line. ${BLUE}Usage:${RESET} code (VSCode)"
    echo -e "${YELLOW}tempolx${RESET} ${BLUE}- Get the weather in Lisboa. ${BLUE}Usage:${RESET} tempolx (Weather)"
    echo -e "${YELLOW}temposx${RESET} ${BLUE}- Get the weather in Seixal. ${BLUE}Usage:${RESET} temposx (Weather)"
    echo -e "${YELLOW}data${RESET} ${BLUE}- Print the current date and time. ${BLUE}Usage:${RESET} data (Utility)"
    echo -e "${YELLOW}cdd${RESET} ${BLUE}- Change directory to the Desktop on WSL. ${BLUE}Usage:${RESET} cdd (Utility)"
    echo -e "${YELLOW}aqui${RESET} ${BLUE}- Open the current directory in Windows Explorer. ${BLUE}Usage:${RESET} aqui (Utility)"
    echo -e "${YELLOW}fmedia${RESET} ${BLUE}- Move all media files to the current directory. ${BLUE}Usage:${RESET} fmedia (Utility)"
    echo -e "${YELLOW}dus${RESET} ${BLUE}- Show disk usage of files and directories. ${BLUE}Usage:${RESET} dus (Utility)"
    echo -e "${YELLOW}net${RESET} ${BLUE}- Show network interfaces and their status. ${BLUE}Usage:${RESET} net (Utility)"
    echo -e "${YELLOW}field${RESET} ${BLUE}- Extract specific fields from a line. ${BLUE}Usage:${RESET} field <field_number> <separator> (Utility)"
    echo -e "${YELLOW}epoch${RESET} ${BLUE}- Convert epoch to human-readable date. ${BLUE}Usage:${RESET} epoch <epoch_time> (Utility)"
    echo -e "${YELLOW}colors${RESET} ${BLUE}- Print all 256 colors in the terminal. (Utility)"
    echo -e "${YELLOW}lscom{RESET} ${BLUE}- Print all available aliases and functions with descriptions. (Utility)"
}



# Load external files
. ~/.bash_aliases    2>/dev/null || true
. ~/.bashrc.local    2>/dev/null || true

# load completion
. /etc/bash/bash_completion 2>/dev/null ||
	. ~/.bash_completion 2>/dev/null


true
