    echo -e "${YELLOW}gl${RESET} ${BLUE}- Show the Git log. (Git)"
    echo -e "${YELLOW}gls${RESET} ${BLUE}- Show a graph of the Git log with oneline and decorations. (Git)"
    echo -e "${YELLOW}glpd${RESET} ${BLUE}- Show the Git log with detailed commit information and patch diff. (Git)"
